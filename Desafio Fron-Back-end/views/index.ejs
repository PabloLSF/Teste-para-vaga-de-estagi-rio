<%- include('./partial/header.ejs'); %>
<body>
  <%- include('./partial/navbar.ejs'); %>

  <div class="container">
    <hr>
    <h1>Posts</h1>
    <hr>
    <a href="/posting" class="btn btn-dark">Postar</a>
    <hr>
    <% posts.forEach(post =>{ %>
      <div class="card">
        <div class="card-body">
          <h2>  <p><%=post.title %></p></h2>
        </div>
        <div class="card-footer">
          <a href="post/view/<%=post.id%>"><button class="btn btn-dark" >Ver Post</button></a>
        </div>
      </div>

      <% }) %>


    </div>

  </body>
  <%- include('./partial/footer.ejs'); %>
